<div class="public-session-details"
     data-component="public-session-details"
     data-sessionId="<%= session.sessionId %>">

  <section class="main-title">
    <h1 class="main-title__theme">
      <%= session.theme %>
    </h1>
    <p class="main-title__category">
      <span>Категория:</span> <%= session.categoryName %>
    </p>
    <p class="main-title__speaker">
      <span>Спикер: </span> <%= session.speaker.firstname %> <%= session.speaker.lastname %>
    </p>
  </section>

  <section class="public-session-details__form-ask-question-container"
           data-element="public-session-details__form-ask-question-container">
  </section>

  <section class="describe">
    <h2 class="describe__title">
      Описание
    </h2>
    <p class="describe__content">
      <%= session.describeSession %>
    </p>
  </section>

  <section class="describe">
    <h2 class="describe__title">
      О себе
    </h2>
    <p class="describe__content">
      <%= session.speaker.about %>
    </p>
  </section>
</div>
